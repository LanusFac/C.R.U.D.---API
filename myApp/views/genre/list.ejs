<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>
        <h1>Welcome to the Genre's section</h1>

        <ul class="list">
            <% genres.map(genre => {  %>
                <li>
                    <h3><%= genre.name %></h3>
                    
                    <ul>
                        <% genre.movies.map(movie => { %> 
                            <li>
                                <%= movie.title %> 
                            </li>
                        <% }) %> 
                    </ul>
                    <form action="/genres/delete/<%= genre.id %>?_method=DELETE" method="POST">
                        <button type="submit">
                            Delete
                        </button>
                    </form>
                    <form action="/genres/edit/<%= genre.id %>" method="GET">
                        <button type="submit">
                            Edit
                        </button>
                    </form>
                </li>
            <% }) %> 
        </ul>
    </body>
</html>